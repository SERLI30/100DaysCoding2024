
package Days80;

import java.util.Scanner;

public class Days80 {
    public static void main(String[] args) {
        Scanner serli = new Scanner(System.in);

        System.out.print("Masukkan kata atau kalimat: ");
        String A = serli.nextLine();

        String B= A.trim();

        System.out.println("kata atau kalimat asli: '" + A + "'");
        System.out.println("kata atau kalimat setelah trim: '" + B + "'");
    }
}
